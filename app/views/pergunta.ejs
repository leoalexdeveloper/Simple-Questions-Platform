<%-include("./partials/head.ejs")%>

<body>

<%-include("./partials/navbar.ejs")%>

    <div class="container">
       <hr>
       <h1><%= pergunta.titulo %></h1>
       <p><%= pergunta.descricao %></p>
       <hr>
       <form action="/responder" method="post">
        <h3>Responda:</h3>
        <br>
        <label for="">Resposta:</label>
        <textarea class="form-control" name="corpo" id="" cols="30" rows="10" placeholder="Digite sua resposta"></textarea>
        <br>
        <input type="hidden" name="pergunta" value="<%=pergunta.id%>">
        <button type="submit" class="btn btn-primary">Responder</button>
       </form>
       <hr>
       <h3>Respostas</h3>
       <% respostas.forEach((resposta) => { %>
        <br>
            <div class="card">
                <div class="card-body">
                    <div><%=resposta.corpo%></div>
                    <div class="alert alert-success">Respondido em: <%=resposta.createdAt%></div>
                </div>
            </div>
        <% }) %>
    </div>

</body>

<%-include("./partials/footer.ejs")%>